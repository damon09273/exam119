<table class="table">

<tr>
<th>文章標題：<%= @event.title %></th>	
</tr>

<tr>
<th><%= @event.content %></th>	
</tr>


<tr>
<th>留言內容：<% @comments.each do |comment| %></th> 

</tr>

<tr>
<th><%= comment.body %></th> 
<th><%= link_to "delete", event_comment_path(comment), method: :delete %></th>
<% end %>
</tr>

</table>

<tr>	
<%= form_for @comment, :url => event_comments_path(@event) do |f| %>
	<%= f.label :body %>
	<%= f.text_field :body %>
	<%= f.submit %>
<% end %>
</tr>